<div class="container mt-5">
  <h1 class="mb-4">Parts</h1>
  <div class="mb-3">
    <%= link_to 'Home', admin_products_index_path, class: 'btn btn-primary' %>
    <%= link_to 'Create New', admin_combinations_new_path, class: 'btn btn-secondary' %>
  </div>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope='col'>Primary Part</th>
        <th scope='col'>Affected Part</th>
        <th scope='col'>Allowed </th>
        <th scope='col'>Additional Price</th>
        <th scope='col'>Action </th>
      </tr>
    </thead>

    <tbody>
      <% @combinations.each do |combination| %>
        <tr>
          <td><%= combination.condition_part_id %></td>
          <td><%= combination.affected_part_id %></td>        
          <td><%= combination.allowed %></td>
          <td><%= number_to_currency(combination.additional_price) %></td>
          <td><%= link_to 'edit', "edit?id=#{combination.id}", method: :get, class: 'btn btn-warning btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
