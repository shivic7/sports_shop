
<div class="container mt-5">
  <h1 class="mb-4">New Part Combination</h1>
  <%= form_with model: @combination, url: admin_combinations_create_path, method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :condition_part_id %>
      <%= form.collection_select :condition_part_id, @parts, :id, :name, { prompt: "Select Condition Part" }, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= form.label :affected_part_id %>
      <%= form.collection_select :affected_part_id, @parts, :id, :name, { prompt: "Select Affected Part" }, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :allowed, class: 'form-check-label' %>
      <%= form.check_box :allowed, { class: 'form-check' } %>
    </div>

    <div class="form-group">
      <%= form.label :additional_price %>
      <%= form.number_field :additional_price, class: 'form-control', step: 0.01 %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Combination", class: 'btn btn-primary' %>
      <%= link_to "Cancel", admin_combinations_index_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
