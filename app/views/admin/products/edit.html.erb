<div class="container mt-5">
  <h1 class="mb-4">Edit Product</h1>
  <%= form_for([:admin, @product], url: "update?id=#{@product.id}", method: "patch") do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :base_price %>
      <%= f.number_field :base_price, class: 'form-control', step: 0.01 %>
    </div>

    <div class="form-group">
      <%= f.label :disabled %>
      <%= f.select :disabled, [[true, true], [false, false]], {}, {class: "form-control"} %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', "index", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
  