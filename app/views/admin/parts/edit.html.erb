<div class="container mt-5">
  <h1 class="mb-4">Edit Parts</h1>
  <%= form_for([:admin, @part], url: "update?id=#{@part.id}", method: "patch") do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :stock %>
      <%= f.number_field :stock, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, class: 'form-control', step: 0.01 %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', "index", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
  