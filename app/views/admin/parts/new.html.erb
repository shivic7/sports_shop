<div class="container mt-5">
  <h1 class="mb-4">New Part</h1>
  <%= form_with model: @part, url: admin_parts_create_path, method: :post do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :category %>
      <%= form.select :category, CATEGORY, params[:category] || {}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.text_field :price, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :stock %>
      <%= form.number_field :stock, class: 'form-control' %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Part", class: 'btn btn-primary' %>
      <%= link_to "Cancel", admin_parts_index_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
