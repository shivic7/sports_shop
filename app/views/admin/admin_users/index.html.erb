<div class="container mt-5">
  <h1 class="mb-4">Admin Users</h1>
  <div class="mb-3">
    <%= link_to 'Home', admin_products_index_path, class: 'btn btn-primary' %>
    <%= link_to 'Create New', new_admin_admin_user_path, class: 'btn btn-secondary' %>
  </div>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @admin_users.each do |admin_user| %>
        <tr>
          <td><%= admin_user.name %></td>
          <td><%= admin_user.email %></td>
          <td><%= admin_user.role %></td>
          <td><%= link_to 'Edit', edit_admin_admin_user_path(admin_user), class: 'btn btn-warning btn-sm'  %></td>
          <td>
            <%= button_to 'Destroy', admin_admin_user_path(admin_user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
